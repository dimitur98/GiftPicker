@model GiftPicker.Web.ViewModels.LoginModel

@{
    ViewBag.Title = "Login";
}

@section Styles{
    <link href="~/css/login.css?v=@ViewBag.BuildVersion" rel="stylesheet">
}

<div id="login" class="panel mx-auto mt-5">
    <div class="panel-body">

        <h3 class="text-center">@ViewBag.Title</h3>

        <alert use-temp-data="true" />

        <div asp-validation-summary="ModelOnly" class="text-center">Login failed</div>

        <form method="post">
            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="@(Html.DisplayNameFor(m => m.Username))" />
                <span asp-validation-for="Username"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="@(Html.DisplayNameFor(m => m.Password))" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <div class="text-center">
                <input type="submit" value="Login" class="btn btn-lg btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>