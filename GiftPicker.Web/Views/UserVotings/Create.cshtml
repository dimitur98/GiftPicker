@model GiftPicker.Web.ViewModels.UserVotingCreateModel

@{
    ViewBag.Title = "Create User Vote";
}

<div class="col-md-4 mx-auto">
    <h3>@ViewBag.Title</h3>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="UserId" class="form-label"></label>
            <select asp-for="UserId" asp-items="@(new SelectList(Model.Users.Select(u => new {Id = u.Id, Text = $"{u.FullName} ({u.Birthday.ToString("yyyy-MM-dd")})"}), "Id", "Text", Model.UserId))" class="form-select">
                <option value="">-- Please Select --</option>
            </select>
            <span asp-validation-for="UserId"></span>
        </div>

        <div class="form-group">
            <label asp-for="Year" class="form-label"></label>
            <select asp-for="Year" asp-items="@(new SelectList(Model.Years))" class="form-select">
            </select>
            <span asp-validation-for="Year"></span>
        </div>

        <div class="col-md-12 text-center">
            <input type="submit" value="Create" class="btn btn-info" />
        </div>
    </form>
</div>